
@{
    ViewData["Title"] = "Login";
}
@model Niramaya.Models.LoginViewModel
@*<h1 class="text-center">Login</h1>*@
<div class="container backgr">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="display-4 card-title text-center">Niramaya LLC</h1>
                    <form method="post" asp-controller="Home" asp-action="LoginUser" style="width:350px;" class="align-self-center text-center container">
                        @*<h4 class="text-center">Use Niramaya account to log in.</h4>*@
                        <hr />
                        <div class="form-group">
                            <label class="float-left">@Html.DisplayNameFor(model => model.Email)</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="float-left">@Html.DisplayNameFor(model => model.Password)</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block text-uppercase d-flex justify-content-center mt-3" type="submit">Login</button>
                        </div>
                        <span id="errorspan" class="text-danger">@ViewBag.ErrorRegister</span>

                    </form>
                    <div class="mt-4">
                        <div class="d-flex justify-content-center links">
                            Don't have an account? <a href="Home/PreRegister" class="ml-2">Register here</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a asp-controller="Home" asp-action="hideRegister">Forgot your password?</a>
                        </div>
                    </div>
                    <br />
                    <span id="sucessspan" class="text-success">@ViewBag.SuccessRegister</span>
                </div>
            </div>
        </div>
    </div>
</div>





